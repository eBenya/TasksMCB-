@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<div class="container">
    <h2>Role list</h2>
    <table class="table">
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
    <a class="btn btn-primary" asp-action="Create">Add rolle</a>
    <a class="btn btn-primary" asp-action="UsersList">Users list</a>
</div>