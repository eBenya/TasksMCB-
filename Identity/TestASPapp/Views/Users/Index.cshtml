@model IEnumerable<TestASP.Models.HelpModel.User>
@{
    ViewBag.Title = "Users list";
}

<div class="container">
    <a class="btn btn-warning" asp-action="Create">Add user</a>

    <table class="table" border="1">
        <tr><th>Email</th><th>Год</th><th></th></tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.Year</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                        <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Change password</a>
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>