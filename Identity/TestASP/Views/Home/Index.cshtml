@{
    ViewData["Title"] = "Home Page";
}

<h2>Start Page</h2>
@if (User.Identity.IsAuthenticated)
{
    <p>@User.Identity.Name</p>
    <p>
        <a asp-controller="Users" asp-action="Index">Users list</a>
        <a asp-controller="Roles" asp-action="Index">Rolles list</a>
    </p>

    <form method="post" asp-controller="Account" asp-action="Logout">
        <input type="submit" value="Выход" />
    </form>
}
else
{
    <a asp-controller="Account" asp-action="Register">SignUp</a>
    <a asp-controller="Account" asp-action="Login">LogIn</a>
    <br>
    <br>
    <a asp-controller="Account" asp-action="RegisterWithConfirm">SignUp</a>
    <a asp-controller="Account" asp-action="LoginWithConfirm">LogIn</a>
}